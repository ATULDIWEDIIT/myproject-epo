@model Digital.Dto.PersonViewDto
@{
    ViewData["Title"] = "User Registration";
    Layout = null;

}
<!DOCTYPE html>
<html lang="en">

<head>
    <!--meta tags-->
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, shrink-to-fit=no" name="viewport">
    <meta name="robots" content="noindex, nofollow">
    <!--favicon-->
    <link rel="icon" href="~/assets//images/favicon.png" type="image/png">
    <!--css-->
    <link href="~/assets//lib/perfect-scrollbar/css/perfect-scrollbar.css" rel="stylesheet">
    <link href="~/assets//lib/bootstrap/bootstrap.min.css" rel="stylesheet">
    <link href="~/assets//css/main.css" rel="stylesheet">
    <title>Admin Dashboard Bootstrap 5 Multipurpose Template</title>
</head>

<body>
    <!--preloader-->
    <div class="preloader"></div>
    <!--app wrapper start-->
    <div class="app-wrapper">
        <partial name="_Notification" />
        <div class="auth-area d-flex align-items-center justify-content-center my-5 my-lg-0">
            <div class="container">
                <div class="row row-cols-1 row-cols-lg-2 row-cols-xl-2">
                    <div class="col mx-auto">
                        <div class="card mb-0 shadow-none rounded-4">
                                <div class="card-body">
                                    <div class="p-3">
                                        <div class="mb-3 text-center">
                                            <img src="~/assets//images/logo-img.png" width="150" alt="logo">
                                        </div>
                                        <div class="text-center mb-4">
                                            <h5 class="">Sign up</h5>
                                            <p class="mb-0">Please enter the below details to create your account</p>
                                        </div>
                                        <div class="form-body">
                                            <form id="frmLogin" class="row g-3"  method="post">
                                                <div class="col-12">
                                                    <label asp-for="FirstName">First Name:</label>
                                                    <input asp-for="FirstName" class="form-control" id="FirstName" />
                                                    <span asp-validation-for="FirstName" class="text-red"></span>
                                                
                                                </div>
                                                <div class="col-12">
                                                    <label asp-for="LastName">Last Name:</label>
                                                    <input asp-for="LastName" class="form-control" id="LastName" />
                                                    <span asp-validation-for="LastName" class="text-red"></span>

                                                </div>
                                            <div class="col-12">
                                                <label asp-for="UserName">User Name:</label>
                                                <input asp-for="UserName" class="form-control" id="Email" />
                                                <span asp-validation-for="UserName" class="text-red"></span>
                                            </div>
                                            <div class="col-12">
                                                    <label asp-for="Email">Email:</label>
                                                    <input asp-for="Email" class="form-control" id="Email" />
                                                    <span asp-validation-for="LastName" class="text-red"></span>                                               
                                                </div>                                            
                                                <div class="col-12">
                                                    <label asp-for="Password">Password:</label>
                                                    <label for="password" class="form-label">Password</label>
                                                    <div class="input-group">
                                                        <input autocomplete="off" type="password" asp-for="Password" class="form-control" id="password" />
                                                        <span asp-validation-for="Password" class="text-red"></span>

                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" id="termsaccept">
                                                        <label class="form-check-label" for="termsaccept">
                                                            I read and agree
                                                            to Terms And Conditions
                                                        </label>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <button type="submit" class="btn btn-primary w-100">Sign up</button>
                                                </div>
                                                <div class="col-12">
                                                    <div class="text-center">
                                                        <p class="mb-0">
                                                            Already have an account? <a href="@Url.Action("Login","Account")">Sign in</a>
                                                        </p>
                                                    </div>
                                                </div>
                                            </form>
                                        </div>
                                        <div class="login-separater text-center mb-5">
                                            <span>OR CONTINUE WITH</span>
                                            <hr>
                                        </div>
                                        <div class="list-inline contacts-social text-center">
                                            <a href="javascript:void(0);"
                                               class="list-inline-item bg-facebook text-white border-0 rounded-circle">
                                                <i class="fab fa-facebook"></i>&nbsp;
                                            </a>
                                            <a href="javascript:void(0);"
                                               class="list-inline-item bg-twitter text-white border-0 rounded-circle">
                                                <i class="fab fa-twitter"></i>&nbsp;
                                            </a>
                                            <a href="javascript:void(0);"
                                               class="list-inline-item bg-google text-white border-0 rounded-circle">
                                                <i class="fab fa-google"></i>&nbsp;
                                            </a>
                                            <a href="javascript:void(0);"
                                               class="list-inline-item bg-linkedin text-white border-0 rounded-circle">
                                                <i class="fab fa-linkedin"></i>&nbsp;
                                            </a>
                                        </div>

                                    </div>
                                </div>
                        </div>
                    </div>
                </div>
                <!--end row-->
            </div>
        </div>
    </div>
    <!--app wrapper end-->
    <!--JavaScript-->
    <script src="~/assets//lib/bootstrap/bootstrap.bundle.min.js"></script>
    <script src="~/assets//lib/jquery/jquery.min.js"></script>
    <script src="~/assets//lib/perfect-scrollbar/js/perfect-scrollbar.js"></script>
    <script src="~/assets//js/main.js"></script>
</body>

</html>